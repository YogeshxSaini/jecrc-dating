# JECRC Dating App - Example Environment Variables

# Backend (.env)
DATABASE_URL="postgresql://postgres:postgres@postgres:5432/jecrc_dating?schema=public"
REDIS_URL="redis://redis:6379"
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"
EMAIL_PROVIDER="console"
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT="587"
SMTP_USER="apikey"
SMTP_PASS="your-sendgrid-api-key"
EMAIL_FROM="noreply@jecrcu.edu.in"
ALLOWED_EMAIL_DOMAIN="jecrcu.edu.in"
S3_ENDPOINT="http://minio:9000"
S3_BUCKET="jecrc-dating"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin"
S3_REGION="us-east-1"
S3_USE_PATH_STYLE="true"
PORT="4000"
NODE_ENV="development"
FRONTEND_URL="http://localhost:3000"
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# Frontend (.env.local)
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_SOCKET_URL=http://localhost:4000
