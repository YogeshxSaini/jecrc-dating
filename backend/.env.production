# Railway Production Environment Variables

# Database
DATABASE_URL=postgresql://user:password@hostname:port/database

# JWT Secrets
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-change-this-in-production

# Redis (Railway provides Redis service)
REDIS_URL=redis://localhost:6379

# Email Configuration
EMAIL_PROVIDER=console
EMAIL_FROM=noreply@jecrcu.edu.in
ALLOWED_EMAIL_DOMAIN=jecrcu.edu.in

# File Storage (MinIO/S3)
S3_ENDPOINT=https://your-minio-endpoint.com
S3_BUCKET=jecrc-dating
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_REGION=us-east-1
S3_USE_PATH_STYLE=true

# App Configuration
PORT=4000
NODE_ENV=production
FRONTEND_URL=https://jecrc-dating.pages.dev

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=300